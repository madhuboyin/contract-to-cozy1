// apps/workers/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
    // CRITICAL: Ensure "rootDir" is NOT present or is set to the project root 
    // if using a composite project structure, but removing it is safer here.
  },
  "include": [
    "./src/**/*",
    // CRITICAL FIX: This path enables module resolution for the backend source files.
    "../../backend/src/**/*" 
  ],
  "exclude": [
    "node_modules"
  ]
}