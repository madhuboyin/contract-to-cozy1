@tailwind base;
@tailwind components;
@tailwind utilities;

/* ========================================
   CONTRACT TO COZY - PHASE 1 COLOR SCHEME
   Moderate Teal + Warm Neutral Palette
   ======================================== */

@layer base {
  :root {
    /* Base Background Colors */
    --background: 0 0% 98%;              /* #FAFAFA - Light Background */
    --foreground: 0 0% 13%;              /* #212121 - Primary Text */
    
    /* Card & Popover */
    --card: 0 0% 100%;                   /* White cards */
    --card-foreground: 0 0% 13%;         /* #212121 - Card text */
    --popover: 0 0% 100%;                /* White popover */
    --popover-foreground: 0 0% 13%;      /* #212121 - Popover text */
    
    /* Primary Accent - Teal */
    --primary: 174 100% 29%;             /* #009688 - Teal Primary */
    --primary-foreground: 0 0% 100%;     /* White on teal */
    
    /* Secondary Colors */
    --secondary: 0 0% 96%;               /* Light gray secondary */
    --secondary-foreground: 0 0% 13%;    /* #212121 - Secondary text */
    
    /* Muted Colors */
    --muted: 0 0% 96%;                   /* Muted background */
    --muted-foreground: 0 0% 38%;        /* #616161 - Secondary text */
    
    /* Accent Colors - Teal Light */
    --accent: 173 44% 51%;               /* #4DB6AC - Teal Light */
    --accent-foreground: 0 0% 100%;      /* White on accent */
    
    /* Destructive (kept from original) */
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    
    /* Border & Input */
    --border: 0 0% 89.8%;                /* Light gray borders */
    --input: 0 0% 89.8%;                 /* Input borders */
    --ring: 174 100% 29%;                /* #009688 - Focus ring (teal) */
    
    /* Border Radius */
    --radius: 0.5rem;
    
    /* Chart Colors - Updated with teal theme */
    --chart-1: 174 100% 29%;             /* Teal primary */
    --chart-2: 173 44% 51%;              /* Teal light */
    --chart-3: 200 18% 18%;              /* Dark gray */
    --chart-4: 0 0% 38%;                 /* Medium gray */
    --chart-5: 0 0% 13%;                 /* Dark text */
    
    /* Custom Brand Colors */
    --color-primary: 174 100% 29%;       /* #009688 */
    --color-primary-light: 173 44% 51%;  /* #4DB6AC */
    --color-background: 0 0% 98%;        /* #FAFAFA */
    --color-background-dark: 200 18% 18%; /* #263238 */
    --color-text-primary: 0 0% 13%;      /* #212121 */
    --color-text-secondary: 0 0% 38%;    /* #616161 */
    --color-white: 0 0% 100%;            /* #FFFFFF */
  }
  
  .dark {
    --background: 200 18% 18%;           /* #263238 - Dark Background */
    --foreground: 0 0% 98%;              /* Light text on dark */
    --card: 200 18% 18%;
    --card-foreground: 0 0% 98%;
    --popover: 200 18% 18%;
    --popover-foreground: 0 0% 98%;
    --primary: 173 44% 51%;              /* Lighter teal for dark mode */
    --primary-foreground: 0 0% 13%;
    --secondary: 0 0% 20%;
    --secondary-foreground: 0 0% 98%;
    --muted: 0 0% 20%;
    --muted-foreground: 0 0% 63.9%;
    --accent: 174 100% 29%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 0 0% 25%;
    --input: 0 0% 25%;
    --ring: 173 44% 51%;
    --chart-1: 173 44% 51%;
    --chart-2: 174 100% 29%;
    --chart-3: 0 0% 70%;
    --chart-4: 0 0% 50%;
    --chart-5: 0 0% 30%;
  }
}

@layer base {
  * {
    @apply border-[hsl(var(--border))];
  }
  body {
    @apply bg-[hsl(var(--background))] text-[hsl(var(--foreground))];
  }
}

html {
  scroll-behavior: smooth;
}

/* ========================================
   PHASE 1 - BRAND COLOR UTILITIES
   ======================================== */

@layer utilities {
  /* Primary Teal Button Styles */
  .btn-primary {
    background-color: hsl(var(--color-primary));
    color: hsl(var(--color-white));
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  
  .btn-primary:hover {
    background-color: hsl(var(--color-primary-light));
  }
  
  .btn-primary:disabled {
    background-color: hsl(0 0% 60%);
    cursor: not-allowed;
  }

  /* Teal text colors */
  .text-brand-primary {
    color: hsl(var(--color-primary));
  }
  
  .text-brand-primary-light {
    color: hsl(var(--color-primary-light));
  }
  
  /* Teal backgrounds */
  .bg-brand-primary {
    background-color: hsl(var(--color-primary));
  }
  
  .bg-brand-primary-light {
    background-color: hsl(var(--color-primary-light));
  }
  
  .bg-brand-background {
    background-color: hsl(var(--color-background));
  }
  
  .bg-brand-dark {
    background-color: hsl(var(--color-background-dark));
  }
  
  /* Border colors */
  .border-brand-primary {
    border-color: hsl(var(--color-primary));
  }
  
  .border-brand-primary-light {
    border-color: hsl(var(--color-primary-light));
  }
}

/* ========================================
   COMPONENT OVERRIDES
   ======================================== */

@layer components {
  /* Link styles with teal */
  a:not(.no-brand-style) {
    color: hsl(var(--color-primary));
    transition: color 0.2s ease;
  }
  
  a:not(.no-brand-style):hover {
    color: hsl(var(--color-primary-light));
  }
  
  /* Footer styles */
  .footer {
    background-color: hsl(var(--color-background-dark));
    color: hsl(var(--color-white));
  }
  
  /* Icon fills */
  .icon-brand-primary {
    fill: hsl(var(--color-primary));
  }
  
  .icon-brand-primary:hover {
    fill: hsl(var(--color-primary-light));
  }
  
  /* Section backgrounds */
  .section-light {
    background-color: hsl(var(--color-background));
  }
  
  .section-white {
    background-color: hsl(var(--color-white));
  }
  
  .section-dark {
    background-color: hsl(var(--color-background-dark));
    color: hsl(var(--color-white));
  }
}
